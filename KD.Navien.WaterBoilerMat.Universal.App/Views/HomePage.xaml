<uviews:NavigationViewItemPage x:Class="KD.Navien.WaterBoilerMat.Universal.App.Views.HomePage"
							   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
							   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
							   xmlns:local="using:KD.Navien.WaterBoilerMat.Universal.App.Views"
							   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
							   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
							   xmlns:prismMvvm="using:Prism.Windows.Mvvm"
							   xmlns:controls="using:KD.Navien.WaterBoilerMat.Universal.App.Controls"
							   xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
							   xmlns:uviews="using:KD.Navien.WaterBoilerMat.Universal.Views"
							   mc:Ignorable="d"
							   prismMvvm:ViewModelLocator.AutoWireViewModel="True"
							   Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >

	<uviews:NavigationViewItemPage.Resources>
		<converters:BoolToVisibilityConverter x:Key="FalseToVisibilityConverter" TrueValue="Collapsed" FalseValue="Visible"/>
	</uviews:NavigationViewItemPage.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition />
		</Grid.RowDefinitions>
		<VisualStateManager.VisualStateGroups>
			<!--  Visual states reflect the application's window size  -->
			<VisualStateGroup x:Name="LayoutVisualStates">
				<VisualState x:Name="WideLayout">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="{StaticResource Breakpoint640Plus}" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						
					</VisualState.Setters>
				</VisualState>
				<VisualState x:Name="NarrowLayout">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="0" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="content.Padding" Value="14,0,14,0" />
						<Setter Target="content.Margin" Value="-14,0,-14,14" />
						<Setter Target="pageHeader.Visibility" Value="Collapsed" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>

		<controls:PageHeader Grid.Row="0" x:Name="pageHeader" Title="NAVIEN MATE" VerticalAlignment="Top" FontSize="{StaticResource TitleBarFontSize}"
							 PowerCommand="{Binding PowerCommand}"
							 LockCommand="{Binding LockCommand}"/>

		<Grid Grid.Row="1" x:Name="content">
			<Grid.RowDefinitions>
				<RowDefinition Height="40"/>
				<RowDefinition />
			</Grid.RowDefinitions>

			<Border Grid.Row="0" Visibility="{Binding Device.IsPowerOn, Converter={StaticResource FalseToVisibilityConverter}}">
				<Border.Background>
					<SolidColorBrush Color="{ThemeResource SystemColorInactiveCaptionColor}"/>
				</Border.Background>
				<TextBlock Text="POWER OFF" HorizontalAlignment="Center" VerticalAlignment="Center"
						   Style="{StaticResource BaseTextBlockStyle}"/>
			</Border>

		</Grid>
	</Grid>
</uviews:NavigationViewItemPage>
